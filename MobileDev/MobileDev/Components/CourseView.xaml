<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev.Components.CourseView">
    <Border Stroke="{StaticResource WGULightBlue}"
            StrokeThickness="0.5"
            StrokeShape="RoundRectangle 5, 5, 5, 5"
            Background="{StaticResource ItemBackground}"
            MinimumHeightRequest="50"
            MaximumHeightRequest="50"
            Margin="10"
            VerticalOptions="Start">
        <FlexLayout>
            <HorizontalStackLayout FlexLayout.Basis="50">
                <Image Source="completedcourseicon.png"
                       WidthRequest="30"
                       Margin="10, 0, 0, 0" />
                <AbsoluteLayout Padding="10, 0, 10, 0">
                    <Label Text="3"
                           TextColor="{StaticResource ProgressFilled}" />
                </AbsoluteLayout>
            </HorizontalStackLayout>
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="*, *"
                  FlexLayout.Grow="1">
                <Label Text="Software Design and QA - D480" 
                       Margin="20, 0"
                       TextColor="{StaticResource WGULightBlue}"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
                <HorizontalStackLayout Grid.Column="0" Grid.Row="1"
                                       Margin="20, 0, 0, 5">
                    <Image Source="editicondark.png"
                           WidthRequest="15"
                           Margin="0, 0, 5, 0" />
                    <Image Source="deleteicon.png"
                           WidthRequest="15" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Column="2" Grid.Row="1"
                                       HorizontalOptions="EndAndExpand">
                    <Label Text="09/01/23 - 09/15/23"
                           TextColor="Black" />
                    <Image WidthRequest="20" Source="datepickicon.png"
                           Margin="10, 0, 0, 5"/>
                </HorizontalStackLayout>
            </Grid>
            <HorizontalStackLayout FlexLayout.Basis="50"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" >
                <Image Source="performancecompleted.png"
                       WidthRequest="20"/>
            </HorizontalStackLayout>
        </FlexLayout>
    </Border>
</ContentView>
