<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileDev.Components"
             x:Class="MobileDev.CoursePage"
             Loaded="OnLoad"
             NavigatedTo="OnLoad">
    <ScrollView>
        <VerticalStackLayout
            x:Name="CourseLayout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">
            <Image Source="wgulogo.png" WidthRequest="150" 
                       HorizontalOptions="Start"
                       Margin="10" />
            <VerticalStackLayout x:Name="courseList">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <local:CourseView />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            <Border HorizontalOptions="EndAndExpand" 
                    VerticalOptions="EndAndExpand"
                    HeightRequest="80"
                    WidthRequest="80"
                    Stroke="{StaticResource WGUDarkBlue}"
                    StrokeShape="Ellipse"
                    BackgroundColor="{StaticResource WGUDarkBlue}">
                <Button Text="+"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Clicked="OnNewButtonClicked" />
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
