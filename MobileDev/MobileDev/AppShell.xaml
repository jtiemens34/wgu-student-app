<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileDev.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileDev"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Terms">
            <ShellContent ContentTemplate="{DataTemplate local:TermPage}" />
        </Tab>
        <Tab Title="Courses">
            <ShellContent ContentTemplate="{DataTemplate local:CoursePage}" />
        </Tab>
        <Tab Title="Assessments">
            <ShellContent ContentTemplate="{DataTemplate local:AssessmentPage}" />
        </Tab>
    </TabBar>
</Shell>